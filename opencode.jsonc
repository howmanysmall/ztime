{
  "$schema": "https://opencode.ai/config.json",
	"agent": {
		"ask": {
			"color": "#7C3AED",
			"description": "General Q&A - ask questions about code, concepts, debugging strategies without executing anything",
			"disable": false,
			"mode": "primary",
			"model": "openai/gpt-5.2-codex",
			"permission": {
				"bash": {
					"*": "ask",
					"bat *": "allow",
					"cat *": "allow",
					"cd *": "allow",
					"delta *": "allow",
					"diff *": "allow",
					"du *": "allow",
					"dust *": "allow",
					"exa *": "allow",
					"fd *": "allow",
					"find *": "allow",
					"git diff*": "allow",
					"git status*": "allow",
					"grep *": "allow",
					"ls *": "allow",
					"lsd *": "allow",
					"rg *": "allow",
					"sd *": "allow",
					"sed *": "allow"
				},
				"codesearch": "allow",
				"doom_loop": "deny",
				"edit": "deny",
				"external_directory": "deny",
				"glob": "allow",
				"grep": "allow",
				"list": "allow",
				"lsp": "allow",
				"question": "ask",
				"read": "allow",
				"task": "deny",
				"todoread": "allow",
				"todowrite": "deny",
				"webfetch": "allow",
				"websearch": "allow"
			},
			"prompt": "{file:./prompts/agents/ask.md}",
			"temperature": 0.3
		},
		"build": {
			"description": "Used after creating a plan or just whenever.",
			"mode": "all",
			"model": "openai/gpt-5.2-codex",
			"permission": {
				"bash": {
					"*": "ask",
					"bat *": "allow",
					"cat *": "allow",
					"cd *": "allow",
					"delta *": "allow",
					"diff *": "allow",
					"du *": "allow",
					"dust *": "allow",
					"exa *": "allow",
					"fd *": "allow",
					"find *": "allow",
					"git diff*": "allow",
					"git status*": "allow",
					"grep *": "allow",
					"ls *": "allow",
					"lsd *": "allow",
					"rg *": "allow",
					"sd *": "allow",
					"sed *": "allow"
				},
				"codesearch": "allow",
				"doom_loop": "ask",
				"edit": "allow",
				"external_directory": "ask",
				"glob": "allow",
				"grep": "allow",
				"list": "allow",
				"lsp": "allow",
				"question": "allow",
				"read": "allow",
				"task": "allow",
				"todoread": "allow",
				"todowrite": "allow",
				"webfetch": "ask",
				"websearch": "allow"
			}
		},
		"plan": {
			"description": "Used to generate a plan.",
			"model": "openai/gpt-5.2",
			"permission": {
				"bash": {
					"*": "ask",
					"bat *": "allow",
					"cat *": "allow",
					"cd *": "allow",
					"delta *": "allow",
					"diff *": "allow",
					"du *": "allow",
					"dust *": "allow",
					"exa *": "allow",
					"fd *": "allow",
					"find *": "allow",
					"git diff*": "allow",
					"git status*": "allow",
					"grep *": "allow",
					"ls *": "allow",
					"lsd *": "allow",
					"rg *": "allow",
					"sd *": "allow",
					"sed *": "allow"
				},
				"codesearch": "allow",
				"doom_loop": "ask",
				"edit": "deny",
				"external_directory": "ask",
				"glob": "allow",
				"grep": "allow",
				"list": "allow",
				"lsp": "allow",
				"question": "allow",
				"read": "allow",
				"task": "allow",
				"todoread": "allow",
				"todowrite": "allow",
				"webfetch": "ask",
				"websearch": "allow"
			}
		}
	},
	"formatter": {
		"biome": { "disabled": true },
		"eslint": { "disabled": true },
		"rustfmt": { "disabled": true },
		"uv format": { "disabled": true },
		"zig": { "disabled": true }
	},
	"instructions": ["./AGENTS.md"],
	"keybinds": {
		"model_list": "ctrl+m"
	},
	"layout": "stretch",
	"lsp": {},
	"mcp": {
		"context7": {
			"enabled": true,
			"headers": { "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}" },
			"type": "remote",
			"url": "https://mcp.context7.com/mcp"
		},
		"gh-grep": {
			"enabled": true,
			"type": "remote",
			"url": "https://mcp.grep.app"
		},
		"github": {
			"command": ["bun", "x", "--bun", "@modelcontextprotocol/server-github"],
			"enabled": true,
			"environment": {
				"GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}"
			},
			"type": "local"
		},
		"package-registry": {
			"command": ["bun", "x", "--bun", "package-registry-mcp"],
			"enabled": false,
			"type": "local"
		}
	},
	"permission": {
		"bash": {
			"*": "ask",
			"bat *": "allow",
			"cat *": "allow",
			"cd *": "allow",
			"delta *": "allow",
			"diff *": "allow",
			"du *": "allow",
			"dust *": "allow",
			"exa *": "allow",
			"fd *": "allow",
			"find *": "allow",
			"grep *": "allow",
			"ls *": "allow",
			"lsd *": "allow",
			"rg *": "allow",
			"sd *": "allow",
			"sed *": "allow"
		},
		"doom_loop": "ask",
		"edit": "ask",
		"external_directory": "ask",
		"skill": "ask",
		"webfetch": "ask"
	},
	"plugin": ["opencode-wakatime"],
	"share": "manual",
	"tools": {},
	"tui": {},
	"username": "ztime"
}
