{
	"inputs": [
		{
			"description": "The API key used for Context7.",
			"id": "context7-api-key",
			"password": true,
			"type": "promptString",
		},
	],
	"servers": {
		"context7": {
			"headers": { "CONTEXT7_API_KEY": "${input:context7-api-key}" },
			"type": "http",
			"url": "https://mcp.context7.com/mcp",
		},
		"gh-grep": {
			"type": "http",
			"url": "https://mcp.grep.app",
		},
		"package-registry": {
			"args": ["x", "--bun", "package-registry-mcp"],
			"command": "bun",
			"type": "stdio",
		},
	},
}
